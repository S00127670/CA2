@model S00127670_CA2.Models.Movie


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        

        <div class="panel panel-warning">
    <div class="panel-heading" style="font-size:20px">@ViewBag.EM</div>

        <div class="panel-body">
        Edit Movie Details Below
    </div>

        @Html.HiddenFor(model => model.movieId)

        <div class="row" style="padding:20px">
            <div class="form-group col-xs-6">
                @Html.LabelFor(model => model.movieTitle)
                @Html.TextBoxFor(model => model.movieTitle, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.movieTitle)
            </div>
            <div class="form-group col-xs-6">
                @Html.LabelFor(model => model.movieGenre)
                @Html.DropDownListFor(model => model.movieGenre, Enum.GetNames(typeof(S00127670_CA2.Models.MovieGenre)).Select(g => new SelectListItem{Text = g}), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.movieGenre)
            </div>
        </div>

        <div class="panel-footer">
            <a class="btn btn-primary"href="@Url.Action("Index")"><span class="glyphicon glyphicon-remove"></span>&nbsp;Cancel</a>
            <button class="btn btn-warning"><span class="glyphicon glyphicon-ok"></span>&nbsp;Save</button>
        </div>
            </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}